extends header  

block content

  style(type="text/css").
    
    body{
      background: rgba(236, 239, 241, 0.31) !important;
    }

    #combo_cultura{
        width: 200px !important;
    }

    #logo{
      padding:5px 20px;
      border-radius:3px;
      color:white;
    }

    #div_menu_sidebar{
      margin-top:5px;
      background: rgba(76, 175, 80, 0.12) !important;
      padding:10px;
      text-align: center;

      margin-bottom:10px;

    }

    #div_menu_sidebar #title{
        font-family: 'Calibri';
        font-size: 28px;
        font-weight:bold;
    }

    #div_menu_sidebar a{
      text-decoration:none;
      padding: 15px;
      color:white;
    }

    #div_menu_sidebar a:hover{
      cursor:pointer;
      border-bottom:1px solid;
      background:rgba(72, 118, 121, 0.07) !important;
      color:white;
    }

    #div_container{
      margin:12px auto;
      width:80%;
      height:900px;
      overflow:auto;
    }

  
  script(type="text/javascript").
  
    $(document).ready(function(){

      Highcharts.chart('dashboard01', {
        chart: {
            type: 'areaspline'
        },
        title: {
            text: 'Acumulado de vendas da semana'
        },
        legend: {
            layout: 'vertical',
            align: 'left',
            verticalAlign: 'top',
            x: 150,
            y: 100,
            floating: true,
            borderWidth: 1,
            backgroundColor: (Highcharts.theme && Highcharts.theme.legendBackgroundColor) || '#FFFFFF'
        },
        xAxis: {
            categories: [
                'Segunda',
                'Terça',
                'Quarta',
                'Quinta',
                'Sexta',
                'Sabado',
                'Domingo'
            ],
            //- plotBands: [{ // visualize the weekend
            //-     from: 4.5,
            //-     to: 6.5,
            //-     color: 'rgba(68, 170, 213, .2)'
            //- }]
        },
        yAxis: {
            title: {
                text: 'Valores em R$'
            }
        },
        tooltip: {
            shared: true,
            valueSuffix: ' units'
        },
        credits: {
            enabled: false
        },
        plotOptions: {
            areaspline: {
                fillOpacity: 0.5
            }
        },
        series: [{
            name: 'Movimentações por dia',
            data: [3, 4, 3, 20, 15, 3, 1]
        }]
      })

            
        Highcharts.chart('dashboard02', {
            title: {
                text: 'Quantidade produzida por mês'
            },
            xAxis: {
                categories: ['1ª Semana', '2ª Semana', '3ª Semana', '4ª Semana']
            },
            labels: {
                items: [{
                    html: 'Top 5 Culturas do Mês',
                    style: {
                        left: '80px',
                        top: '0px',
                        color: (Highcharts.theme && Highcharts.theme.textColor) || 'black'
                    }
                }]
            },
            series: [{
                type: 'column',
                name: 'Morango',
                data: [2, 4, 1, 3]
            }, {
                type: 'column',
                name: 'Uva',
                data: [4, 3, 5, 7]
            }, {
                type: 'column',
                name: 'Laranja',
                data: [3, 3, 8, 5]
            }, {
                type: 'spline',
                name: 'Average',
                data: [3, 2.67, 2,  6.33],
                marker: {
                    lineWidth: 2,
                    lineColor: Highcharts.getOptions().colors[3],
                    fillColor: 'white'
                }
            }, {
                type: 'pie',
                name: 'Total consumption',
                data: [{
                    name: 'Café',
                    y: 13,
                    color: Highcharts.getOptions().colors[0] // Jane's color
                }, {
                    name: 'Milho',
                    y: 23,
                    color: Highcharts.getOptions().colors[1] // John's color
                }, {
                    name: 'Feijão',
                    y: 19,
                    color: Highcharts.getOptions().colors[2] // Joe's color
                }, {
                    name: 'Morango',
                    y: 50,
                    color: Highcharts.getOptions().colors[3] // Joe's color
                },{
                    name: 'Banana',
                    y: 14,
                    color: Highcharts.getOptions().colors[4] // Joe's color
                }],
                center: [100, 80],
                size: 100,
                showInLegend: false,
                dataLabels: {
                    enabled: true
                }
            }]
        });

        
        
        Highcharts.chart('dashboard03', {

            title: {
                text: 'Previsão Dentre Safras'
            },

            subtitle: {
                //- text: 'Source: thesolarfoundation.com'
            },

            yAxis: {
                title: {
                    text: 'Quantidade Prevista'
                }
            },
            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'middle'
            },

            plotOptions: {
                series: {
                    label: {
                        connectorAllowed: false
                    },
                    pointStart: 2010
                }
            },

            series: [{
                name: 'Installation',
                data: [43934, 52503, 57177, 25699, 97031, 8569, 137133, 60548]
            }],

            responsive: {
                rules: [{
                    condition: {
                        maxWidth: 500
                    },
                    chartOptions: {
                        legend: {
                            layout: 'horizontal',
                            align: 'center',
                            verticalAlign: 'bottom'
                        }
                    }
                }]
            }

        });

    })

  div(id='app')
    div(id='div_menu_sidebar') 
        span(id='title') Analytics
    //-   a(href='contratos') Dashboard
    //-   a(href='dashboards') Consultas
    div(id='div_container')
      div(id="dashboard01" style="min-width: 310px; height: 350px; margin: 0 auto")
      hr
      div(id="dashboard02" style="min-width: 310px; height: 450px; margin: 0 auto")
      hr
      select(id='combo_cultura' class="form-control")
        option(value='Banana') Banana
        option(value='Banana') Morango
        option(value='Banana') Uva
        option(value='Banana') Tomate
        option(value='Banana') Abacate
      br
      br
      div(id="dashboard03" style="min-width: 310px; height: 450px; margin: 0 auto")
